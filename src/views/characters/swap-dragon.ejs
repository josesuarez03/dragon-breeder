<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cambiar Dragón</title>
    <style>
        .dragon-list {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }
        .dragon-item {
            margin: 10px;
            text-align: center;
        }
        .dragon-item img {
            width: 150px;
            height: auto;
        }
    </style>
</head>
<body>
    <h1>Selecciona tu Dragón</h1>
    <form action="/swap-dragon" method="POST">
        <div class="dragon-list">
            <% userDragons.forEach(function(dragon) { %>
                <div class="dragon-item">
                    <img src="/sprites/<%= dragon %>/egg.png" alt="<%= dragon %>">
                    <p><%= dragon %></p>
                    <button type="submit" name="dragon" value="<%= dragon %>">Seleccionar</button>
                </div>
            <% }) %>
        </div>
    </form>
</body>
</html>
